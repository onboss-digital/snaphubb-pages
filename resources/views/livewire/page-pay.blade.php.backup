        <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Copy PIX code
            function copyPixCode() {
                const btn = document.getElementById('pix-copy-btn');
                if (!btn) return;
                btn.addEventListener('click', function () {
                    const input = document.getElementById('pix-code');
                    if (!input) return;
                    input.select();
                    try {
                        document.execCommand('copy');
                        btn.textContent = 'Copiado';
                        setTimeout(() => btn.textContent = '{{ __('payment.copy') }}', 2000);
                    } catch (e) {
                        console.warn('Copy failed', e);
                    }
                });
            }

            copyPixCode();

            // Scroll to QR when pix:generated event is dispatched
            window.addEventListener('pix:generated', function (ev) {
                const el = document.getElementById('pix-result');
                if (!el) return;
                el.scrollIntoView({behavior: 'smooth', block: 'center'});
            });
        });
        </script>

