<script>
    // Handle PIX generated browser event to scroll to result and optionally show small animation
    window.addEventListener('pix:generated', function(e) {
        try {
            setTimeout(function(){
                var el = document.getElementById('pix-result');
                if (el) {
                    el.scrollIntoView({behavior: 'smooth', block: 'center'});
                }
            }, 100);
        } catch (err) {
            console.warn('pix:generated handler error', err);
        }
    });

    // Copy PIX code button handling (delegated)
    document.addEventListener('click', function(event) {
        var target = event.target;
        if (target && target.classList && target.classList.contains('pix-copy-btn')) {
            var input = document.getElementById('pix-code');
            if (!input) return;
            var text = input.value || input.getAttribute('value') || '';
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(text).then(function() {
                    var original = target.textContent;
                    target.textContent = 'Copiado';
                    setTimeout(function(){ target.textContent = original; }, 2000);
                }).catch(function(err){
                    console.warn('Could not copy text: ', err);
                });
            } else {
                // fallback
                input.select && input.select();
                try { document.execCommand('copy'); target.textContent = 'Copiado'; setTimeout(function(){ target.textContent = 'Copiar'; },2000); } catch(e) { console.warn('execCommand copy failed', e); }
            }
        }
    });
</script>
